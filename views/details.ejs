<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Management</title>
    <script src="https://kit.fontawesome.com/7b2866e202.js" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="../assets/CSS/empStyle.css">

</head>
<body>
    

    <div class="container">

            <p id="heading">
                <i class="fa-sharp fa-solid fa-users"></i>
                Employee Managment System
            </p>

        <div class="start">
            <form id="emp-form" action="/enter-detail" method="POST">

                <p class="input"><label for="name">Name </label>
                <input type="text" name="name" id="name1" placeholder="Enter your name" required>
                </p>

                <p class="input"><label for="age">Age </label>
                <input type="number" name="age" id="age" placeholder="Enter your age" required>
                </p>
                
                <p class="input"><label for="Ph">Phone No </label>
                <input type="date" name="ph" id="ph" placeholder="Enter your number" required>
                </p>

                <p class="input"><label for="email">Email </label>
                <input type="email" name="email" id="email" placeholder="Enter your email" required>
                </p>
                
                <p class="input"><label for="city">city </label>
                <input type="text" name="city" id="city" placeholder="Enter your city" required>
                </p>
                
                <button id="btn" type="submit">Next</button>
            </form>
        </div>

    </div>

     <div class="list">
        <ul>
            <% for(let i of empId) {%>
                <li class="emp1">

                    <div class="detail">
                        <p><%=i.name%></p>
                        <p><%=i.age%></p>
                        <p><%=i.ph%></p>
                        <p><%=i.email%></p>
                        <p><%=i.city%></p>
                    </div>

                    <div class="delete-btn">
                        <a href="/delete/?id=<%= i.id %>">
                            <i class="fa-solid fa-user-minus"></i>
                        </a>
                    </div>

                </li>
            
            <% } %>
        </ul>
    </div>  
    
